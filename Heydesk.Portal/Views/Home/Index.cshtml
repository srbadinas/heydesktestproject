@model HomeViewModel

@{
    ViewData["Title"] = "Enter your email";
}

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-danger">
        @Model.Message
    </div>
}

<form class="row" method="post" asp-action="EnterEmail">
    <div class="mb-3">
        <label class="form-label">Enter your email</label>
        <input type="email" class="form-control" required asp-for="User.Email" />
    </div>
    <div class="text-end">
        <button class="btn btn-success">Submit</button>
    </div>
</form>
